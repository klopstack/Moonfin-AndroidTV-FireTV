<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rounded_rectangle"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/lbl_enter_pin"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pin_input"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/lbl_enter_pin"
        android:inputType="numberPassword"
        android:maxLength="10"
        android:textSize="20sp"
        android:imeOptions="actionDone" />

    <TextView
        android:id="@+id/pin_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/lbl_pin_code_incorrect"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- Numeric Keypad for TV Remote -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:columnCount="3"
        android:rowCount="4">

        <!-- Row 1: 1, 2, 3 -->
        <Button
            android:id="@+id/pin_button_1"
            style="@style/Button.Default"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="1" />

        <Button
            android:id="@+id/pin_button_2"
            style="@style/Button.Default"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="2" />

        <Button
            android:id="@+id/pin_button_3"
            style="@style/Button.Default"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="3" />

        <!-- Row 2: 4, 5, 6 -->
        <Button
            android:id="@+id/pin_button_4"
            style="@style/Button.Default"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="4" />

        <Button
            android:id="@+id/pin_button_5"
            style="@style/Button.Default"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="5" />

        <Button
            android:id="@+id/pin_button_6"
            style="@style/Button.Default"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="6" />

        <!-- Row 3: 7, 8, 9 -->
        <Button
            android:id="@+id/pin_button_7"
            style="@style/Button.Default"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="7" />

        <Button
            android:id="@+id/pin_button_8"
            style="@style/Button.Default"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="8" />

        <Button
            android:id="@+id/pin_button_9"
            style="@style/Button.Default"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="9" />

        <!-- Row 4: Clear, 0, Submit -->
        <Button
            android:id="@+id/pin_button_clear"
            style="@style/Button.Default"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="⌫" />

        <Button
            android:id="@+id/pin_button_0"
            style="@style/Button.Default"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="0" />

        <Button
            android:id="@+id/pin_button_submit"
            style="@style/Button.Default"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="✓" />
    </GridLayout>

    <Button
        android:id="@+id/forgot_pin_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_forgot_pin"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>
