<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Clock (top right) -->
    <org.jellyfin.androidtv.ui.ClockUserView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="40sp" />

    <!-- Title Row -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="10sp"
        android:layout_toStartOf="@+id/clock"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:text="@string/lbl_genres"
        android:textSize="32sp" />

    <!-- Toolbar with filter and sort buttons (below title, right-aligned) -->
    <LinearLayout
        android:id="@+id/toolBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40sp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Library Filter -->
        <LinearLayout
            android:id="@+id/libraryFilterContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">

            <ImageView
                android:id="@+id/libraryFilterIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_folder"
                app:tint="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/libraryFilterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/all_libraries"
                android:textColor="?android:attr/textColorPrimary" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_down"
                app:tint="?android:attr/textColorSecondary" />

        </LinearLayout>

        <!-- Sort Button -->
        <LinearLayout
            android:id="@+id/sortContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">

            <TextView
                android:id="@+id/sortText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/lbl_name"
                android:textColor="?android:attr/textColorPrimary" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_down"
                app:tint="?android:attr/textColorSecondary" />

        </LinearLayout>

    </LinearLayout>

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Empty state text -->
    <TextView
        android:id="@+id/emptyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_genres_found"
        android:textSize="18sp"
        android:visibility="gone" />

    <!-- Grid Container -->
    <FrameLayout
        android:id="@+id/gridContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar"
        android:layout_above="@+id/counter"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:clipChildren="false" />

    <!-- Counter -->
    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="13sp"
        android:layout_marginEnd="60sp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        tools:text="1 | 24" />

</RelativeLayout>
